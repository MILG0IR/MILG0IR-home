<?php
	$main_theme = glob('themes/*.theme-main.css');
	$main_nav = glob('themes/*.theme-nav.css');
	$i = 0;
	foreach($main_theme as $main){
		$mg_themes['main'][$i] = substr($main, 7, -15);
		$i++;
	}
	$i = 0;
	foreach($main_nav as $nav){
		$mg_themes['nav'][$i] = substr($nav, 7, -14);
		$i++;
	}
	unset($i);
?>
